@import "base.less";
#header{
    height:70px;
    line-height: 80px;
    color: white;
    font-size:24px;
    padding: 0 10px;
    font-family: "KaiTi";
        text-align: center;

    a{
        color: white;
        font-size:28px;
        font-weight:lighter;
        float: left;
        line-height:80px;
    }
}

#main{
    width: 100%;
//  height:500px;
    background-color:rgba(255,255,255,0.2);
    position: absolute;
    top:70px;  
    .all{
         margin-top:5px;
         width: 100%;
         height: 180px;
      >.login-password,.second-password{
            margin: 0;
            background-color:rgba(255,255,255,0.8);
            height: 45px;
            width: 100%;     
            line-height:45px;
            box-sizing: border-box;
            border-bottom:1px solid rgba(0,0,0,0.2);       
        span{
            color: #555555;
            font-size:16px;
            margin-left: 10px;
        }
         #left{
            float: left;
            margin-left:20px;
        }        
             #right{
            float: right;
            margin-right: 20px;
            line-height: 45px;
            font-size:24px;          
        }
       
        
        
    } 

}
    .loginPage{
           margin:30px;
           margin-top: 50px;
           height: 50px;
           background-color:#188b65;
           text-align: center;
           line-height:50px;
           
          a{
              span{
                   font-family: "KaiTi";
                   color:white;
                   font-size: 22px;
              }
          }
        }
}
