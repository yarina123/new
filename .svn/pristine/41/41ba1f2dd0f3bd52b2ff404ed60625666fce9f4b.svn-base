
//@font-size:14px;
@color:#f2f7fa;

*{
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    touch-action: none; 
}
li,a{
    list-style: none;
    text-decoration: 0;;
}
i{
    font-style: normal;
}
html,body{
    height: 100%;
}
//公共头部区域
#header{
    background-color: #188b65;
    height:60px;
    position: fixed;
    width: 100%;
    z-index: 999;

    h4{
        color: @color;
        text-align: center;
        line-height: 70px;
        font-weight: normal;
        margin: 0;
        font-family: "KaiTi";
        font-size:26px;
        
    }
   
}
