#header {
  height: 70px;
  background-color: #3b9c83;

}
#header h4 {
  font-size: 18px;
  font-family: "微软雅黑";
  line-height: 90px;
  letter-spacing:1px;
}
#main {
  padding-top: 70px;
  width: 100%;
  height: 100%;
  background-color: #fff;
  position: absolute;

}
#main .logo {
  height: 90px;
  width: 100px;
  margin: 30px auto;
  margin-bottom: 20px;
}
#main .logo img {
  height: 80px;
}
#main form {
  background-color: #fff;
  margin-top: 30px;
}

#main form label,
#main form input {
   font-weight: 400;
   font-size: 14px;
}
#main form input::-webkit-input-placeholder {
  color: rgba(0, 0, 0, 0.2);
}
#main .register {
  border: 1px solid #3b9c83;
  margin: 10px 20px;
  font-size: 14px;
  text-align: center;
  height: 40px;
  line-height: 40px;
  border-radius:5px;
}
#main .register a {
  color: #3b9c83;
