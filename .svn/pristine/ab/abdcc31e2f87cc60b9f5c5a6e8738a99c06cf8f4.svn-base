
//@font-size:14px;
@color:#f2f7fa;

*{
    margin: 0;
    padding: 0;
    box-sizing: border-box;
     touch-action: none;
}
li,a{
    list-style: none;
    text-decoration: 0;;
}
i{
    font-style: normal;
}
html,body{
    height: 100%;
}
//公共头部区域
#header{
    background-color: #188b65;
    height:70px;
    position: fixed;
    width: 100%;
    z-index: 999;

    h4{
        color: @color;
        text-align: center;
        line-height: 90px;
        font-weight: normal;
        margin: 0;
        font-family: "SimHei";
        font-size:22px;
        
    }
   
}

#main{
    background-color: #f4f4f4;
}

//公共底部
#footer{
   background-color: #FFFDEF;
   border-top:2px solid  gainsboro;
   position: fixed;
   left: 0;
   width: 100%;
   height:60px;
   line-height:60px;
   bottom: 0;
   z-index: 999;
   li{
       a{
           color: gray;
     
       }
      a.active{
          color:#188b64;
      }
          a.fa{
      font-size:20px;
       text-align: center;
       display: block;
       padding-top: 8px;
//    &:hover{
//        color:black;
//     }
       span{
           display: block;
           margin-top:5px;
           font-size:16px;
       }
   }

       
   }

}

