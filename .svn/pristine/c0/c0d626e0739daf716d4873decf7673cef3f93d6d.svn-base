@import "base.less";
#header {
    height: 80px;
    background-color: #3b9c83;
    h4 {
        font-size: 18px;
        font-family: "simhei";
        line-height: 110px;
        letter-spacing: 0.5px;
    }
}

#main {
    padding-top: 80px;
    width: 100%;
    height: 100%;
    background-color: #fff;
    position: absolute;
    .logo {
        height: 90px;
        width: 100px;
        margin: 30px auto;
        margin-bottom: 20px;
        img {
            height: 80px;
        }
    }
    form {
        background-color: #fff;
        margin-top: 30px;
        label {
            font-size: 18px;
            font-weight: 400;
        }
        label,
        input {
            font-size: 16px;
        }
        input::-webkit-input-placeholder {
            color: rgba(0, 0, 0, 0.2);
        }
    }
    .register {
        border: 0.2px solid #3b9c83;
        margin: 10px 20px;
        font-size: 16px;
        text-align: center;
        height: 40px;
        line-height: 40px;
        a {
            color: #3b9c83;
        }
    }
    .other-login {
        ul {
            margin-bottom: 10px;
            display: flex;
            justify-content: space-around;
            li {
                border-bottom: 1px solid  rgba(0,0,0,0.1);
                float: left;
                flex: 1;
                margin-left : 2px;
            }
            .way {
                line-height: 30px;
                 text-align: center;
                font-size: 14px;
                font-weight: 600;
                letter-spacing: 1px;
               position: relative;
               top: 15px;
               color: #333333;
                border-bottom: none;
            }
        }
        
    }
    .wechatLogin{
        margin-top:30px;
        margin-bottom: 100px;
        a {
            display: block;
            img {
                width: 50px;
                border-radius: 30%;
                position: absolute;
                left: 50%;
                margin-left: -32px;
            }
        }
    }
}